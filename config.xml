<?xml version='1.0' encoding='utf-8'?>
<widget id="com.CommandM.PP" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PowerBang</name>
    <description>
        PowerBang
    </description>
    <author email="maoxs2@163.com" href="http://cmd.ecustcic.com">
        Command M
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/slpash.png" density="land-hdpi"/>
        <splash src="res/slpash.png" density="land-ldpi"/>
        <splash src="res/slpash.png" density="land-mdpi"/>
        <splash src="res/slpash.png" density="land-xhdpi"/>

        <splash src="res/slpash.png" density="port-hdpi"/>
        <splash src="res/slpash.png" density="port-ldpi"/>
        <splash src="res/slpash.png" density="port-mdpi"/>
        <splash src="res/slpash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/logo.png" />
	<preference name="SplashScreenDelay" value="10000" />
</widget>
