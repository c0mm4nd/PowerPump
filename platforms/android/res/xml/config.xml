<?xml version='1.0' encoding='utf-8'?>
<widget id="com.CommandM.PP" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/slpash.png" />
    <splash density="land-ldpi" src="res/slpash.png" />
    <splash density="land-mdpi" src="res/slpash.png" />
    <splash density="land-xhdpi" src="res/slpash.png" />
    <splash density="port-hdpi" src="res/slpash.png" />
    <splash density="port-ldpi" src="res/slpash.png" />
    <splash density="port-mdpi" src="res/slpash.png" />
    <splash density="port-xhdpi" src="res/slpash.png" />
    <name>PowerBang</name>
    <description>
        PowerBang
    </description>
    <author email="maoxs2@163.com" href="http://cmd.ecustcic.com">
        Command M
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <icon src="res/logo.png" />
    <preference name="SplashScreenDelay" value="10000" />
</widget>
